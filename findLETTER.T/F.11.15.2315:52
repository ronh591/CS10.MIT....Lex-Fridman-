#include <iostream>
#include <string>
using namespace std;
bool findletter(string original, char letter ) {
   
  for(int i = 0; i < original.length(); i++)  //step 1
  {
    cout << "original letters: " << original[i] << endl;
    if(original[i] == letter) { //step 2
     
      return true;
      
    }
   
  }
   return false; //step 3 is outside the curly braces of the loop
}
int main() {
cout << findletter("apple", 'l');
} 
